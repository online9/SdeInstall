LoadModule passenger_module {{ gem_path }}/passenger-{{ passenger_version }}/buildout/apache2/mod_passenger.so

<IfModule mod_passenger.c>
    PassengerRoot {{ gem_path }}/passenger-{{ passenger_version }}
    PassengerDefaultRuby {{ local_bin_path }}//ruby
</IfModule>

<VirtualHost *:80>
   ServerName localhost
#   DocumentRoot /var/www/redmine
   PassengerAppRoot /home/redmine/redmine-{{ redmine_version }}
</VirtualHost>
